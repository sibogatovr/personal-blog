@model _1stBlog.Models.ViewModels.AddTagRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Добавить новый тег</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Имя</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Показываемое имя</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Принять</button>
        </div>
    </form>
</div>